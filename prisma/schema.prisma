// src/infrastructure/database/schema.prisma

datasource db {
  provider = "postgresql"  // ou "mysql", dependendo do banco de dados
  url      = env("DATABASE_URL")  // A URL do banco de dados será definida no arquivo .env
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())  // 'cuid()' cria um id único
  name      String
  email     String   @unique              // O email precisa ser único
  password  String
  createdAt DateTime @default(now())      // Data de criação
  updatedAt DateTime @updatedAt          // Atualizado automaticamente
}
